<UserControl x:Class="TopologicalWPF.Shapes.NetworkNodeShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TopologicalWPF.Shapes"
             mc:Ignorable="d" Height="55" Width="100">
    <Grid>
        <Rectangle x:Name="rShowNode" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="55" Margin="0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="txtName" TextAlignment="Center" HorizontalAlignment="Left" Margin="0,7,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="20" Width="100"/>
        <TextBlock x:Name="txtDesc" TextAlignment="Center" HorizontalAlignment="Left"  Margin="0,28,0,7" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"  Width="100" Height="20"/>
    </Grid>
</UserControl>
